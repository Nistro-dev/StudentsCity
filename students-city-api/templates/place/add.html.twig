{% extends 'layouts/with_navbar.html.twig' %}

{% block title %}Proposer un établissement{% endblock %}

{% block main_content %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h1 class="h4 mb-0">Proposer un établissement</h1>
                </div>
                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_widget(form) }}
                        <button type="submit" class="btn btn-primary mt-3">
                            <i class="fas fa-plus me-2"></i>Proposer
                        </button>
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}